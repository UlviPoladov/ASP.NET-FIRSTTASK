<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Drinks Menu</title>
    <link rel="stylesheet" href="~/css/drinks.css">
</head>
<body>
    <div class="container">
        <h1>Drinks Menu</h1>
        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Litr</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var drink in Model)
                {
                    <tr>
                        <td>@drink.Id</td>
                        <td>@drink.Name</td>
                        <td>@drink.Description</td>
                        <td>@drink.Price.ToString("C")</td>
                        <td>@drink.Ltr.ToString("C")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>